  "shortcuts": [
    {
      "name": "Emergency Help",
      "short_name": "Emergency",
      "description": "Request immediate roadside assistance",
      "url": "/pages/user/request-service.html?emergency=true",
      "icons": [
        {
          "src": "assets/images/icons/emergency-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Track Service",
      "short_name": "Track",
      "description": "Track your current service request",
      "url": "/pages/user/track-service.html",
      "icons": [
        {
          "src": "assets/images/icons/track-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Service History",
      "short_name": "History",
      "description": "View your service history",
      "url": "/pages/user/history.html",
      "icons": [
        {
          "src": "assets/images/icons/history-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "categories": [
    "business",
    "productivity",
    "utilities",
    "travel"
  ],
  
  "screenshots": [
    {
      "src": "assets/images/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "DriveSafe home page on desktop"
    },
    {
      "src": "assets/images/screenshots/mobile-service-request.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Service request page on mobile"
    },
    {
      "src": "assets/images/screenshots/mobile-tracking.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Real-time service tracking"
    }
  ],
  
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.drivesafe.nepal",
      "id": "com.drivesafe.nepal"
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+drivesafe",
      "url": "/handle-protocol?url=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg", ".gif"]
      }
    }
  ],
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ]
}