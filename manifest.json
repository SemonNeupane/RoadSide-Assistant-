{
  "name": "DriveSafe - Roadside Assistance Nepal",
  "short_name": "DriveSafe",
  "description": "Emergency roadside assistance and vehicle support services across Nepal. Get help for breakdowns, flat tires, battery issues, and EV charging.",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#007BFF",
  "background_color": "#FFFFFF",
  "lang": "en-NP",
  "scope": "/",
  
